@model TarefaModel
@{
    ViewData["Title"] = "Confirmação de Apagar Contatos";
}

<div>
    <h3>Confirmação para apagar(@Model.Titulo)?</h3>
</div>


<a class="btn btn-primary btn-block" role="button" asp-controller="Tarefa" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Tarefa" asp-action="Apagar">Confirmar Exclusão</a>